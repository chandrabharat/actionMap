.row.mt-2
    .col-12.col-md-6.offset-md-3.col-xl-4.offset-xl-4
        %h1.text-center Create news article


    .col-12.col-md-6.offset-md-3.col-xl-4.offset-xl-4
        = form_tag find_my_news_item_path, method: :get do
            .form-group.row
                .col-sm-2
                    = label :news_item, :representative, class: 'col-form-label'
                .col-sm-10
                    = select :news_item, :representative, @representatives_list, { include_blank: true },
                    class: 'form-control'
                    

            .form-group.row
                .col-sm-2
                    = label :news_item, :issue, class: 'col-form-label'
                .col-sm-10
                    = select :news_item, :issue, @issues_list, { include_blank: true },
                    class: 'form-control'

                .actions
                    = submit_tag 'Search', class: 'btn btn-primary'
